{% extends 'base.html.twig' %}

{% block title %}Catalogue de Livres{% endblock %}

{% block stylesheets %}
<style>
    .hero-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 20px;
        padding: 3rem;
        margin-bottom: 2rem;
        color: white;
        text-align: center;
    }

    .hero-section h1 {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .hero-section p {
        font-size: 1.2rem;
        opacity: 0.9;
    }

    .filter-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        padding: 1.5rem;
        margin-bottom: 2rem;
        position: sticky;
        top: 20px;
    }

    .filter-card h5 {
        color: var(--primary-color);
        font-weight: 600;
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid #e5e7eb;
    }

    .book-card {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        transition: all 0.3s ease;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .book-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
    }

    .book-image {
        height: 350px;
        object-fit: cover;
        width: 100%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .book-image-placeholder {
        height: 350px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
    }

    .book-image-placeholder i {
        font-size: 5rem;
        opacity: 0.7;
    }

    .book-card-body {
        padding: 1.5rem;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .book-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--dark-color);
        margin-bottom: 1rem;
        min-height: 3rem;
    }

    .book-info {
        color: #6b7280;
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
    }

    .book-info strong {
        color: var(--dark-color);
    }

    .book-price {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--primary-color);
        margin: 1rem 0;
    }

    .book-stock {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 500;
        margin-bottom: 1rem;
    }

    .book-stock.in-stock {
        background: #d1fae5;
        color: #065f46;
    }

    .book-stock.out-of-stock {
        background: #fee2e2;
        color: #991b1b;
    }

    .catalog-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .catalog-title {
        font-size: 2rem;
        font-weight: 700;
        color: var(--dark-color);
        margin: 0;
    }

    .books-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 2rem;
    }

    @media (max-width: 768px) {
        .books-grid {
            grid-template-columns: 1fr;
        }
        
        .hero-section h1 {
            font-size: 2rem;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="hero-section">
    <h1><i class="bi bi-book"></i> Bienvenue dans notre Bibliothèque</h1>
    <p>Découvrez notre vaste collection de livres et trouvez votre prochaine lecture</p>
</div>

<div class="row">
    <div class="col-lg-3">
        <div class="filter-card">
            <h5><i class="bi bi-funnel"></i> Filtres de recherche</h5>
            <form method="get" action="{{ path('home') }}">
                <div class="mb-3">
                    <label for="search" class="form-label">
                        <i class="bi bi-search"></i> Recherche
                    </label>
                    <input type="text" name="search" id="search" class="form-control" value="{{ search }}" placeholder="Titre, ISBN, Auteur...">
                </div>
                <div class="mb-3">
                    <label for="category" class="form-label">
                        <i class="bi bi-tags"></i> Catégorie
                    </label>
                    <select name="category" id="category" class="form-select">
                        <option value="">Toutes les catégories</option>
                        {% for category in categories %}
                            <option value="{{ category.id }}" {% if selectedCategory == category.id %}selected{% endif %}>
                                {{ category.designation }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                <div class="mb-3">
                    <label for="author" class="form-label">
                        <i class="bi bi-person"></i> Auteur
                    </label>
                    <select name="author" id="author" class="form-select">
                        <option value="">Tous les auteurs</option>
                        {% for author in authors %}
                            <option value="{{ author.id }}" {% if selectedAuthor == author.id %}selected{% endif %}>
                                {{ author.prenom }} {{ author.nom }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                <div class="mb-3">
                    <label for="max_price" class="form-label">
                        <i class="bi bi-currency-euro"></i> Prix maximum
                    </label>
                    <input type="number" name="max_price" id="max_price" class="form-control" value="{{ selectedMaxPrice }}" step="0.01" min="0" placeholder="Prix max">
                </div>
                <div class="mb-3">
                    <label for="date_from" class="form-label">
                        <i class="bi bi-calendar"></i> Date de publication
                    </label>
                    <input type="date" name="date_from" id="date_from" class="form-control" value="{{ selectedDateFrom }}">
                </div>
                <button type="submit" class="btn btn-primary w-100 mb-2">
                    <i class="bi bi-funnel-fill"></i> Appliquer les filtres
                </button>
                <a href="{{ path('home') }}" class="btn btn-outline-secondary w-100">
                    <i class="bi bi-arrow-counterclockwise"></i> Réinitialiser
                </a>
            </form>
        </div>
    </div>
    <div class="col-lg-9">
        <div class="catalog-header">
            <h2 class="catalog-title">
                <i class="bi bi-bookshelf"></i> Catalogue de Livres
            </h2>
            {% if books is not empty %}
                <span class="badge bg-primary" style="font-size: 1rem; padding: 0.5rem 1rem;">
                    {{ books|length }} livre(s) trouvé(s)
                </span>
            {% endif %}
        </div>
        
        {% if books is empty %}
            <div class="alert alert-info text-center" style="border-radius: 15px; padding: 3rem;">
                <i class="bi bi-inbox" style="font-size: 4rem; opacity: 0.5;"></i>
                <h4 class="mt-3">Aucun livre trouvé</h4>
                <p class="text-muted">Essayez de modifier vos critères de recherche</p>
            </div>
        {% else %}
            <div class="books-grid">
                {% for book in books %}
                    <div class="book-card">
                        {% if book.image %}
                            <img src="{{ asset('uploads/images/' ~ book.image) }}" class="book-image" alt="{{ book.titre }}">
                        {% else %}
                            <div class="book-image-placeholder">
                                <i class="bi bi-book"></i>
                            </div>
                        {% endif %}
                        <div class="book-card-body">
                            <h5 class="book-title">{{ book.titre }}</h5>
                            <div class="book-info">
                                <strong><i class="bi bi-person"></i> Auteur:</strong> {{ book.author }}
                            </div>
                            <div class="book-info">
                                <strong><i class="bi bi-tag"></i> Catégorie:</strong> {{ book.category }}
                            </div>
                            <div class="book-info">
                                <strong><i class="bi bi-building"></i> Éditeur:</strong> {{ book.publisher }}
                            </div>
                            <div class="book-info">
                                <strong><i class="bi bi-upc-scan"></i> ISBN:</strong> {{ book.isbn }}
                            </div>
                            <div class="book-price">{{ book.prix }} €</div>
                            <div>
                                {% if book.quantite > 0 %}
                                    <span class="book-stock in-stock">
                                        <i class="bi bi-check-circle"></i> {{ book.quantite }} en stock
                                    </span>
                                {% else %}
                                    <span class="book-stock out-of-stock">
                                        <i class="bi bi-x-circle"></i> Rupture de stock
                                    </span>
                                {% endif %}
                            </div>
                        </div>
                        <div class="card-footer bg-white border-0 p-3">
                            {% if is_granted('ROLE_USER') %}
                                {% if book.quantite > 0 %}
                                    <a href="{{ path('cart_add', {id: book.id}) }}" class="btn btn-primary w-100">
                                        <i class="bi bi-cart-plus"></i> Ajouter au panier
                                    </a>
                                {% else %}
                                    <button class="btn btn-secondary w-100" disabled>
                                        <i class="bi bi-x-circle"></i> Indisponible
                                    </button>
                                {% endif %}
                            {% else %}
                                <a href="{{ path('login') }}" class="btn btn-outline-primary w-100">
                                    <i class="bi bi-box-arrow-in-right"></i> Connectez-vous pour acheter
                                </a>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
